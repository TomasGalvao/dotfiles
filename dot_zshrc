# fi


function extract {
  if [ -z "$1" ]; then
    echo "Usage: extract <path/file_name>.<zip|rar|bz2|gz|tar|tbz2|tgz|Z|7z|xz|ex|tar.bz2|tar.gz|tar.xz>"
  else
    if [ -f $1 ]; then
      case $1 in
        *.tar.bz2)   tar xvjf $1    ;;
        *.tar.gz)    tar xvzf $1    ;;
        *.tar.xz)    tar xvJf $1    ;;
        *.lzma)      unlzma $1      ;;
        *.bz2)       bunzip2 $1     ;;
        *.rar)       unrar x -ad $1 ;;
        *.gz)        gunzip $1      ;;
        *.tar)       tar xvf $1     ;;
        *.tbz2)      tar xvjf $1    ;;
        *.tgz)       tar xvzf $1    ;;
        *.zip)       unzip $1       ;;
        *.Z)         uncompress $1  ;;
        *.7z)        7z x $1        ;;
        *.xz)        unxz $1        ;;
        *.exe)       cabextract $1  ;;
        *)           echo "extract: '$1' - unknown archive method" ;;
      esac
    else
      echo "$1 - file does not exist"
    fi
  fi
}

function extract_and_remove {
  extract $1
  rm -f $1
}
alias unzip="extract_and_remove"
alias ls="exa --icons -F"
alias ll="exa -l --icons -F"
alias cat="bat --style=auto"
alias install="sudo dnf install"
alias commit="git add . && git commit -m"
alias nano="micro"
alias dev="cd /home/galvasz/Development"
alias notes="cd /home/galvasz/Documents/ObsidianVault"
alias help="navi"
alias update="sudo dnf update && sudo dnf upgrade"
alias neofetch="fastfetch"
alias unlock="rm /home/galvasz/.config/BraveSoftware/Brave-Browser/SingletonLock"
alias config="chezmoi"
alias ..="cd .."
# To customize prompt, run `p10k configure` or edit ~/.p10k.zsh.
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh
